{
	"version": "2.0.0",
	"problemMatchers": [
		{
			"name": "esbuild-watch",
			"owner": "esbuild",
			"fileLocation": [
				"relative",
				"${workspaceFolder}"
			],
			"pattern": [
				{
					"regexp": "^âœ˜ \\[ERROR\\] (.*)$",
					"message": 1
				},
				{
					"regexp": "^\\s+(.+):(\\d+):(\\d+):$",
					"file": 1,
					"line": 2,
					"column": 3
				}
			],
			"background": {
				"activeOnStart": true,
				"beginsPattern": "\\[watch\\] build started",
				"endsPattern": "\\[watch\\] build finished"
			}
		}
	],
	"tasks": [
		{
			"label": "pnpm: install",
			"type": "shell",
			"command": "pnpm install --frozen-lockfile",
			"problemMatcher": [],
			"presentation": {
				"reveal": "silent"
			}
		},
		{
			"label": "watch",
			"dependsOn": [
				"pnpm: install",
				"pnpm: watch:tsc",
				"watch:esbuild"
			],
			"dependsOrder": "sequence",
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "watch:esbuild",
			"type": "shell",
			"command": "pnpm run watch:esbuild",
			"group": "build",
			"problemMatcher": "$esbuild-watch",
			"isBackground": true,
			"presentation": {
				"group": "watch",
				"reveal": "never"
			}
		},
		{
			"label": "pnpm: watch:tsc",
			"type": "shell",
			"command": "pnpm run watch:tsc",
			"group": "build",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"group": "watch",
				"reveal": "never"
			}
		},
		{
			"label": "pnpm: watch-tests",
			"type": "shell",
			"command": "pnpm run watch-tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"watch",
				"pnpm: watch-tests"
			],
			"problemMatcher": []
		},
		{
			"label": "build: vsix",
			"type": "shell",
			"command": "pnpm run vsix",
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": []
		}
	]
}
